{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "target": "ES2020",
    "noImplicitAny": false,
    "outDir": "./dist",
    //"rootDir": "./src",
    "module": "Node16",
    "sourceMap": true,
    // "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    // 2024-04: VSCode underlines it as an error, but otherwise importing the sri4node types
    // in JSDoc annotations does not work!!!
    // (example: /** @typedef {import('sri4node').TSriConfig} TSriConfig */)
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"]
}
